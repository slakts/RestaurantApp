@model Restaurant.Models.Entities.Reservation

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5">
    <h3 class="text-center" style="color: red;">Bu kaydı silmek istediğinizden emin misiniz?</h3>
    <br>
    <hr>
        <dl class="row">
            <dt class="col-sm-2">
                Ad:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Email:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                Telefon No:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TelefonNo)
            </dd>
            <dt class="col-sm-2">
                Sayı:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sayi)
            </dd>
            <dt class="col-sm-2">
                Saat:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Saat)
            </dd>
            <dt class="col-sm-2">
                Tarih:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tarih)
            </dd>
        </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
    </form>
</div>

