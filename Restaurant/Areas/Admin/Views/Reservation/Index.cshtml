@model IEnumerable<Restaurant.Models.Entities.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Rezervasyon Listesi</h1>
<hr>
<table class="table table-striped table-bordered" id="reservationTable">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Email</th>
            <th>Telefon No</th>
            <th>Sayı</th>
            <th>Saat</th>
            <th>Tarih</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.TelefonNo)</td>
                <td>@Html.DisplayFor(modelItem => item.Sayi)</td>
                <td>@Html.DisplayFor(modelItem => item.Saat)</td>
                <td>@item.Tarih.ToShortDateString()</td>
                <td class="actions text-start">
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#reservationTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
        });
    </script>
}
