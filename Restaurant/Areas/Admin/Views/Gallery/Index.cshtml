@model IEnumerable<Restaurant.Models.Entities.Gallery>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="text-center">Galeri Listesi</h1>
<hr>

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg">Resim Ekle</a>
</p>
<table class="table table-striped table-bordered" id="galleryTable">
    <thead>
        <tr>
            <th>Resim</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Image == null)
                    {
                        <img src="~/Site/images/no-image.png" width="100" height="80" />
                    }
                    else
                    {
                        <img src="@item.Image" width="100" height="80" />
                    }
                </td>
                <td class="actions text-start">
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
