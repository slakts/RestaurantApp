@model IEnumerable<Restaurant.Models.Entities.Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Mesajlar</h1>
<hr>

<table class="table table-striped table-bordered" id="contactTable">
    <thead>
        <tr>
            <th>
                Adı
            </th>
            <th>
                Email
            </th>
            <th>
                Telefon No
            </th>
            <th>
                Mesaj
            </th>
            <th>
                Tarih
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mesaj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tarih)
            </td>
            <td class="actions text-start">
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                  <i class="bi bi-trash"></i> Sil
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
