@model Restaurant.Models.Entities.About

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center" style="color: red;">Silmek istediğinizden emin misiniz?</h3>
<br>

<div class="row justify-content-center">
    <div class="col-md-6">
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Başlık: </dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <input type="submit" value="Sil" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary ml-2">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>
